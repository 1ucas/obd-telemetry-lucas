<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.manobray.firstbluetooth.ConnectionScreen"
    android:background="@drawable/fundoapp" >

    <TextView
        android:id="@+id/macAdressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/hello_world"
        android:textSize="14sp" />
    
  


    <Button
        android:id="@+id/buttonConnectDevice"
        
        android:textColor="#FFFFFF"
       	android:background="@drawable/mainscreenbuttonshape"
		
        
        android:minWidth="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/macAdressTextView"
        android:layout_marginTop="23dp"
        android:text="@string/connectButtonString" />

    <Button
        android:id="@+id/buttonStartReading"
        
        android:textColor="#FFFFFF"
       	android:background="@drawable/mainscreenbuttonshape"
	 
        android:minWidth="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonConnectDevice"
        android:layout_alignBottom="@+id/buttonConnectDevice"
        android:layout_alignParentRight="true"
        android:text="Dashboard" />

    <Button
        android:id="@+id/buttonConsole"
        
        android:textColor="#FFFFFF"
       	android:background="@drawable/mainscreenbuttonshape"
	 
        android:minWidth="120dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        android:layout_below="@+id/buttonStartReading"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:text="Go to Console" />
    
    
    <TextView
        android:id="@+id/stateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonConnectDevice"
        android:layout_below="@+id/buttonConsole"
        android:layout_marginTop="24dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/ErrosTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/stateTextView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:text="Erros" />


</RelativeLayout>
