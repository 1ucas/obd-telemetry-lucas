<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ConsoleActivity"
    android:background="@drawable/fundoapp" >

    <TextView
        android:id="@+id/protocolTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:text="Protocolo Escolhido: Auto" />

    <EditText
        android:id="@+id/mensagemEditText"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/protocolTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:hint="Mensagem" />

    <Button
        android:id="@+id/sendButton"
        android:textColor="#FFFFFF"
        android:background="@drawable/mainscreenbuttonshape"

        android:minWidth="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/mensagemEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Enviar Mensagem"
        />

    <EditText
        android:id="@+id/respostaEditText"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sendButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:hint="Resposta"
        />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/respostaEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:text="Status: OK"/>






</RelativeLayout>
